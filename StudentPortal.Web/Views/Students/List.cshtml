@{
}

@model List<StudentPortal.Web.Models.Entities.Student>
<h1>Students</h1>

<table class="table">
    <thead>
        <td>Name</td>
        <td>Email</td>
        <td>Phone</td>
        <td></td>
    </thead>
    <tbody>
            @foreach (var student in Model)
            {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td><a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            </tr>
            }
    </tbody>
</table>
